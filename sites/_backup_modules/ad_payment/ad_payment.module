  $validated = _ad_payment_validate_cc_data($form_state);
  if (is_array($validated)) {
    //return FALSE;
    //dpm($validated);
    form_set_error($validated['field'], $validated['message']);
  }

  // Get Price
  module_load_include('inc', 'ad_payment', 'ad_payment_price_check');
  $price_total = ad_payment_price_check($form_state, 'form_state');

  $updated_price = array(
    'und' => array(
      0 => array(
        'value' =>  $price_total,
      ),
